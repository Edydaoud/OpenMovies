<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/handlerImageView"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:scaleType="center"
        android:src="@drawable/ic_horizontal_line"
        app:layout_constraintTop_toTopOf="parent" />

    <com.googy.openmovies.base.presentation.view.DynamicRecyclerView
        android:id="@+id/seasonsRecyclerVew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/handlerImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>